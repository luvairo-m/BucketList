<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BucketList"
             xmlns:views="clr-namespace:BucketList.Views"
             xmlns:converters="clr-namespace:BucketList.Converters"
             xmlns:viewmodels="clr-namespace:BucketList.ViewModels"
             xmlns:animations="clr-namespace:BucketList.Animations"
             x:Class="BucketList.MainPage"
             BackgroundColor="{StaticResource Background}">
    <ContentPage.Resources>
        <Style TargetType="Frame">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="Red" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <CollectionView ItemsSource="{Binding Tasks}" SelectionMode="Single">
            <!--SelectionChangedCommand="{Binding ShowTaskCommand}"
                        SelectionChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=SelectedItem}">-->
            <!--<CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="15"/>
            </CollectionView.ItemsLayout>-->
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10, 10, 10, 0"
                           HeightRequest="100"
                           MinimumHeightRequest="95"
                           Padding="13" 
                           CornerRadius="20"
                           BackgroundColor="DodgerBlue"
                           BorderColor="Transparent">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label 
                                Text="{Binding Title}"
                                FontSize="19" 
                                TextColor="White"
                                FontAttributes="Bold"/>
                            <Label 
                                Margin="0, 2, 0, 0"
                                Grid.Row="1"
                                Text="{Binding Description}"
                                FontSize="16" 
                                TextColor="White"/>
                            <Label 
                                Margin="0, 10, 0, 0"
                                Grid.Row="2"
                                Text="{Binding CreationTime, Converter={converters:TimePrettifyerConverter}}"
                                FontSize="12"
                                TextColor="White"/>
                        </Grid>
                    </Frame>
                    <!--<Grid HeightRequest="170" Margin="10, 0, 10, 0"
                          BackgroundColor="AliceBlue">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="0.25*"/>
                        </Grid.RowDefinitions>
                        
                        <Label Text="{Binding Title}" FontSize="20" Margin="10"/>
                        <VerticalStackLayout Grid.Row="1">
                            <BoxView Color="Gray" HeightRequest="1"/>
                            <Button BackgroundColor="Red"
                                    FontSize="5"
                                    HeightRequest="25"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=RemoveTaskCommand}"
                                    CommandParameter="{Binding}"
                                    WidthRequest="50"
                                    HorizontalOptions="End"
                                    Margin="0, 2, 10, 0" />
                            
                        </VerticalStackLayout>
                    </Grid>-->
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button 
            Grid.Row="1"
            Text="{StaticResource task-adding-button-text}"
            Margin="10"
            Command="{Binding AddTaskCommand}"
            FontSize="18">
            <Button.Triggers>
                <Trigger TargetType="{x:Type Button}" 
                         Property="Button.IsPressed" 
                         Value="True">
                    <Trigger.EnterActions>
                        <animations:ScaleAnimation/>
                    </Trigger.EnterActions>
                </Trigger>
            </Button.Triggers>
        </Button>
    </Grid>
</ContentPage>