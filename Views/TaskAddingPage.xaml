<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BucketList.TaskAddingPage"
             xmlns:local="clr-namespace:BucketList"
             xmlns:animations="clr-namespace:BucketList.Animations"
             xmlns:viewmodels="clr-namespace:BucketList.ViewModels"
             Style="{StaticResource MainContentPageStyle}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Сохранить"
                     Command="{Binding CreateTaskCommand}"/>
    </ContentPage.ToolbarItems>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".6*"/>
            <RowDefinition Height=".4*"/>
        </Grid.RowDefinitions>
        <VerticalStackLayout>
            <Label 
                Margin="0, 10, 0, 0"
                HorizontalOptions="Center"
                FontSize="14"
                FontAttributes="Italic"
                Text="Цель: заголовок + описание + дата"/>
            <Frame Margin="10, 15, 10, 0"
                   BackgroundColor="#2C3594"
                   BorderColor="Transparent">
                <VerticalStackLayout Margin="-12">
                    <Entry TextColor="White"
                           Text="{Binding TaskTitle, Mode=TwoWay, TargetNullValue=''}"/>
                    <Label  HorizontalOptions="Center"
                            Margin="0, -7, 10, 0"
                            FontSize="12"
                            TextColor="Gray"
                            Text="Заголовок"/>
                    <Editor x:Name="description"
                                HeightRequest="100"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                Text="{Binding TaskDescription, Mode=TwoWay, TargetNullValue=''}"/>
                    <Label HorizontalOptions="Center"
                           Margin="0, -7, 10, 0"
                           FontSize="12"
                           TextColor="Gray"
                           Text="Описание"/>
                    <DatePicker TextColor="White" 
                                Format="D"
                                Date="{Binding DeadLine, Mode=OneWayToSource}"
                                />
                    <Label HorizontalOptions="Center"
                           Margin="0, -7, 10, 0"
                           TextColor="Gray"
                           FontSize="12"
                           Text="Дата окончания"/>
                </VerticalStackLayout>
            </Frame>
            <Label 
                Margin="0, 10, 0, 0"
                HorizontalOptions="Center"
                FontSize="14"
                FontAttributes="Italic"
                Text="Подзадача: заголовок"
                />
            <Frame Margin="10, 15, 10, 0"
                       BackgroundColor="#2C3594"
                       BorderColor="Transparent">
                <VerticalStackLayout Margin="-12">
                    <Entry TextColor="White" IsEnabled="{Binding IsKeyboardEnabled, Mode=TwoWay}"
                           Text="{Binding SubTaskTitle, Mode=TwoWay, TargetNullValue=''}"/>
                </VerticalStackLayout>
            </Frame>
            <Button Text="Добавить подзадачу"
                    Margin="10, 15, 10, 0"
                    CornerRadius="20"
                    TextColor="White"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    Background="DodgerBlue"
                    Command="{Binding AddSubTaskCommand}">
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="Button.IsEnabled" Value="False">
                        <Setter Property="Background" Value="Gray"/>
                    </Trigger>
                </Button.Triggers>
            </Button>
        </VerticalStackLayout>
        <CollectionView ItemsSource="{Binding SubTasks}" 
                        SelectionMode="Single"
                        Grid.Row="1"
                        Margin="10, 0, 10, 10"
                        HorizontalScrollBarVisibility="Always"
                        ItemsUpdatingScrollMode="KeepLastItemInView"
                        SelectedItem="{Binding SelectedSubTask, Mode=TwoWay}"
                        SelectionChangedCommand="{Binding EditSubTaskCommand}"
                        SelectionChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=SelectedItem}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border HeightRequest="60"
                            Stroke="Transparent"
                            Padding="13"
                            StrokeShape="RoundRectangle 10">
                        <Grid Margin="-7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".9*"/>
                                <ColumnDefinition Width=".15*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="1"
                                    Margin="0, 0, 5, 0">
                                <Image  
                                    Grid.Column="1"
                                    HeightRequest="30"
                                    Source="Images/trashdelete.png"/>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource 
                                                          AncestorType={x:Type viewmodels:TaskAddingViewModel}}, Path=RemoveSubTaskCommand}"
                                                          CommandParameter="{Binding}"/>
                                </Grid.GestureRecognizers>
                            </Grid>
                            <Label 
                                Margin="10, 0, 10, 0"
                                Text="{Binding Title}"
                                VerticalOptions="Center"
                                FontSize="17" 
                                FontAttributes="Bold"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button 
            Grid.Row="1"
            ImageSource="Images/check1.png"
            Background="green"
            Margin="0, 0, 30, 30"
            FontAttributes="Bold"
            Padding="0"
            FontSize="35"
            Command="{Binding CreateTaskCommand}"
            HorizontalOptions="End"
            VerticalOptions="End"
            CornerRadius="40"
            WidthRequest="65"
            HeightRequest="65" >
            <Button.Triggers>
                <Trigger TargetType="Button" Property="Button.IsPressed" Value="True">
                    <Trigger.EnterActions>
                        <animations:ButtonScaleAnimation/>
                    </Trigger.EnterActions>
                </Trigger>
                <Trigger TargetType="Button" Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="Gray"/>
                </Trigger>
            </Button.Triggers>
        </Button>
        <Button 
            Grid.Row="1"
            ImageSource="Images/cross.png"
            Background="red"
            Margin="0, 0, 110, 30"
            FontAttributes="Bold"
            Padding="0"
            FontSize="35"
            HorizontalOptions="End"
            VerticalOptions="End"
            CornerRadius="40"
            WidthRequest="65"
            Command="{Binding CancelCreationCommand}"
            HeightRequest="65" >
            <Button.Triggers>
                <Trigger TargetType="Button" Property="Button.IsPressed" Value="True">
                    <Trigger.EnterActions>
                        <animations:ButtonScaleAnimation/>
                    </Trigger.EnterActions>
                </Trigger>
            </Button.Triggers>
        </Button>
    </Grid>
</ContentPage>