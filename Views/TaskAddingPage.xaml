<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BucketList.TaskAddingPage"
             xmlns:local="clr-namespace:BucketList"
             xmlns:views="clr-namespace:BucketList.Views">
    <VerticalStackLayout>
        <Label Text="Type task title:" 
               Margin="10, 10, 0, 0"
               FontSize="20"/>
        <Entry Margin="10, 5, 0, 0" 
               Text="{Binding TaskTitle, Mode=TwoWay}"/>
        <Label Text="Type task description:" 
               Margin="10, 10, 0, 0"
               FontSize="20"/>
        <Entry Margin="10, 5, 0, 0"
               Text="{Binding TaskDescription, Mode=TwoWay}"/>
        <Button Text="Accept" 
                Margin="10" 
                FontSize="18"
                Command="{Binding CreateTaskCommand}">
            <Button.Triggers>
                <Trigger TargetType="Button" Property="Button.IsPressed" Value="True">
                    <Trigger.EnterActions>
                        <views:ButtonAnimation/>
                    </Trigger.EnterActions>
                </Trigger>
            </Button.Triggers>
        </Button>
        <Button Text="Cancel" 
                Margin="10, 0, 10, 0" 
                FontSize="18"
                Command="{Binding CancelCreationCommand}"
                BackgroundColor="Red">
            <Button.Triggers>
                <Trigger TargetType="Button" Property="Button.IsPressed" Value="True">
                    <Trigger.EnterActions>
                        <views:ButtonAnimation/>
                    </Trigger.EnterActions>
                </Trigger>
            </Button.Triggers>
        </Button>
    </VerticalStackLayout>
</ContentPage>