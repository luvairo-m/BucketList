<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:BucketList.Views"
             x:Class="BucketList.Views.ShowTaskPage">
    <VerticalStackLayout>
        <Label Text="{Binding TaskTitle, StringFormat='Title: {0}'}" 
               Margin="10, 10, 0, 0"
               FontSize="20"/>
        <Label Text="{Binding TaskDescription, StringFormat='Description: {0}'}" 
               Margin="10, 10, 0, 0"
               FontSize="20"/>
        <Button Text="Accept" 
                BackgroundColor="Green"
                Margin="10" 
                FontSize="18"
                Command="{Binding ReturnCommand}">
            <Button.Triggers>
                <Trigger TargetType="Button" Property="Button.IsPressed" Value="True">
                    <Trigger.EnterActions>
                        <views:ButtonAnimation/>
                    </Trigger.EnterActions>
                </Trigger>
            </Button.Triggers>
        </Button>
    </VerticalStackLayout>
</ContentPage>